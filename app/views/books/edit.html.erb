<h1 class="header">Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error-explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>

  <div class= "field">
   <p>Title</p>
    <div class="title-field"> 
      <%= f.text_field :title %>
    </div>
  </div>

  <div class= "field">
   <p>Body</p>
    <div class="body-area"> 
      <%= f.text_area :body %>
    </div>
  </div>

  <div class= "field">
   <p></p>
     <%= f.submit 'Update Book', class: 'button' %>
  </div>

<% end %>


<%= link_to "Show", book_path(@book.id)  %>
|
<%= link_to "Back", "/books" %>

